<aura:component>
  <aura:attribute name="searchResult" type="Object" />
  <aura:attribute name="isModalOpen" type="boolean" default="false" />
  <aura:if isTrue="{! v.searchResult != null}">
    <lightning:card title="{!v.searchResult.name}">
      <aura:set attribute="actions">
        <lightning:button
          variant="brand"
          label="Add to Portfolio"
          onclick="{!c.openModal}"
        />
      </aura:set>
      <!-- display current price -->
      <p class="slds-p-horizontal_small">
        <lightning:formattedNumber
          value="{!v.searchResult.market_data.current_price.usd}"
          style="currency"
          currencyCode="USD"
        />
      </p>
      <!-- display 24-hour price change -->
      <aura:if
        isTrue="{!v.searchResult.market_data.price_change_24h_in_currency.usd lt 0}"
      >
        <p class="slds-text-color_error slds-p-horizontal_small">
          <lightning:formattedNumber
            value="{!v.searchResult.market_data.price_change_24h_in_currency.usd}"
            style="currency"
            currencyCode="USD"
          />
        </p>
        <aura:set attribute="else">
          <p class="slds-text-color_success slds-p-horizontal_small">
            <lightning:formattedNumber
              value="{!v.searchResult.market_data.price_change_24h_in_currency.usd}"
              style="currency"
              currencyCode="USD"
            />
          </p>
        </aura:set>
      </aura:if>
      <!-- display coin logo -->
      <img src="{!v.searchResult.image.small}" />
    </lightning:card>
    <c:modalForm isModalOpen="{!v.isModalOpen}" coin="{!v.searchResult}" />
  </aura:if>
</aura:component>
